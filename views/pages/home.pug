.home(data-background="#333" data-color="#4831D4")
    .home__wrapper

      .home__gallery
        each rows in [0, 1]
          each media, index in home.data.gallery
            a.home__gallery__link(href=Link(media.link))
              figure.home__gallery__media(class=`home__gallery__media--${index % 5 + 1}`)
                img.home__gallery__media__image(alt=media.image.alt, data-src=media.image.url)
                h1.home__gallery__text(data-animation="title")!=media.title.replace(/\n/g, '<br>')
